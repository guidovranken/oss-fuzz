echo -n "Compiling libFuzzer-gv to $LIB_FUZZING_ENGINE... "
pushd $SRC/libfuzzer-gv > /dev/null
sed -i 's/__attribute__((always_inline))//g' FuzzerDefs.h
$CXX $CXXFLAGS -c -g -std=c++11 *.cpp
ar r libFuzzer.a *.o
ranlib libFuzzer.a
cp libFuzzer.a $LIB_FUZZING_ENGINE
popd > /dev/null
export COVERAGE_FLAGS="-fsanitize-coverage=trace-pc-guard"
echo " done."
